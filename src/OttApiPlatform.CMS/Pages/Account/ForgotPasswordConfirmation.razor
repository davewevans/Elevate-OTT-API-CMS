@layout AccountLayout
@page "/account/ForgotPasswordConfirmation"
@page "/account/ForgotPasswordConfirmation/{DisplayConfirmPasswordLink:bool}/{code}"

<MudText Typo="Typo.h4" GutterBottom="true">@Resource.Forgot_password_confirmation</MudText>

@if (DisplayConfirmPasswordLink)
{
    <MudText Typo="Typo.body2" Style="text-align:justify">
        @Resource.This_app_does_not_currently_have_a_real_email_sender_registered, @Resource.see <MudLink Href="https://aka.ms/aspaccountconf">@Resource.these_docs</MudLink> @Resource.for_how_to_configure_a_real_email_sender.
        @Resource.Normally_this_would_be_emailed. @Resource.Click <MudLink Href="javascript:void(0)" OnClick="ResetPassword">@Resource.here</MudLink> @Resource.to_reset_your_password.
    </MudText>
}
else
{
    <MudText Typo="Typo.body2" Style="text-align:justify">
        @Resource.Please_check_your_email_to_reset_your_password
    </MudText>
}
